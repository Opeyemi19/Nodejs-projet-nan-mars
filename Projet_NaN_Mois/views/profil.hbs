<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                        <h3>Welcome <span class="">Mr. {{ user.fullname }}</span></h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {{#each prod}}
            <div class="col-md-3 mt-4">
                <div class="card text-center">
                    <img src="uploads/{{image}}" alt="" class="card-img-top picture">
                    <div class="card-body">
                        <h3>{{ name_prod }}</h3>
                        <span class="card">
                            Prix:<span class="badge badge-pill badge-dark mx-auto">{{ price_prod }} Fcfa</span>
                        </span>
                        <hr>
                        <a href="/profil/{{id_pan}}" class="btn btn-outline-danger">Annuller Commande</a>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>
</div>