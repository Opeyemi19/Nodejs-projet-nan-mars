<div class="container p-4">
    <div class="row">
        {{#each link}}
            <div class="col-md-3 mt-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>{{ name_pain }}</h3>
                        <h4>Prix:<span class="badge badge-pill badge-dark">{{ price_pain }} Fcfa</span></h4>
                        <hr>
                        <p class="m-2">{{description}}</p>
                        <hr>
                        <p>{{timeago create_at}}</p>
                        <a href="/admins/delete/{{id}}" class="btn btn-outline-danger">Delete Link</a>
                        <a href="/admins/edit/{{id}}" class="btn btn-outline-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>
</div>