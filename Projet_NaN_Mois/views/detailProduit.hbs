<div class="container p-4">
    <div class="row">
        {{#each link}}
            <div class="col-md-5 mx-auto">
                <div class="card text-center">
                    <img src="uploads/{{image}}" alt="" class="card-img-top">
                    <div class="card-body">
                        <h2>{{ name_pain }}</h2>
                         <h4>Prix:<span class="badge badge-pill badge-dark">{{ price_pain }} Fcfa</span></h4> 
                        <hr>
                        <p class="m-2">{{ description }}</p>
                        <a href="/" class="btn btn-outline-warning">Retour</a>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>
</div>